@model MvcStok.Models.Entities.TBLURUNLER
@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Guncelle","Urun", FormMethod.Post))
{ 
 <div class="form-group">
        <label>Ürün ID</label>
        @Html.TextBoxFor(m => m.URUNID, "", new {@class="form-control"})
        @Html.ValidationMessageFor(m => m.URUNID, "", new {@style="color:red"})
 </div>
<div class="form-group">
    <label>Ürün Adı</label>
    @Html.TextBoxFor(m => m.URUNAD, "", new {@class="form-control"})
    @Html.ValidationMessageFor(m => m.URUNAD, "", new {@state="color:red"})
</div>
<div class="form-group">
    <label>Marka</label>
    @Html.TextBoxFor(m=>m.MARKA,"",new {@class="form-control"})
    @Html.ValidationMessageFor(m => m.MARKA, "", new {@state="color:red"})
</div>
<div class="form-group">
    <label>Ürün Kategorisi</label>
    @*@Html.TextBoxFor(m => m.URUNKATEGORI, "",new {@class="form-control"})*@
    @Html.DropDownListFor(m=>m.TBLKATEGORILER.KATEGORIID,(List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.URUNKATEGORI, "", new {@class="color:red"})
</div>
<div class="form-group">
    <label>Fiyat</label>
    @Html.TextBoxFor(m => m.FIYAT, "", new {@class="form-control"})
    @Html.ValidationMessageFor(m => m.FIYAT, "", new {@class="color:red"})
</div>
<div class="form-group">
    <label>Stok</label>
    @Html.TextBoxFor(m => m.STOK, "", new {@class="form-control"})
    @Html.ValidationMessageFor(m => m.STOK, "", new {@state="color:red"})
</div>
<br />
<div>
    <button class="btn btn-warning">Ürün Güncelle</button>
</div>
}